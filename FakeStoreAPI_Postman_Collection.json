{
  "info": {
    "name": "FakeStore API - QA Testing Collection",
    "_postman_id": "c9e0b1a2-1d23-44cc-9211-fakestore123",
    "description": "Automated API tests for FakeStore API using Postman",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET All Products",
      "request": {
        "method": "GET",
        "url": "https://fakestoreapi.com/products"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 200\", ()=> pm.response.to.have.status(200));",
              "pm.test(\"Response time < 700ms\", ()=> pm.expect(pm.response.responseTime).to.be.below(700));",
              "pm.test(\"Body is array\", ()=> pm.expect(pm.response.json()).to.be.an('array'));"
            ]
          }
        }
      ]
    },
    {
      "name": "GET Product By ID",
      "request": {
        "method": "GET",
        "url": "https://fakestoreapi.com/products/1"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 200\", ()=> pm.response.to.have.status(200));",
              "const json = pm.response.json();",
              "pm.test(\"Product has title\", ()=> pm.expect(json).to.have.property('title'));"
            ]
          }
        }
      ]
    },
    {
      "name": "GET Product Invalid ID",
      "request": {
        "method": "GET",
        "url": "https://fakestoreapi.com/products/9999"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 404 or empty\", ()=> {",
              "    pm.expect([404,200]).to.include(pm.response.code);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\"title\":\"QA Test Product\",\"price\":13.5,\"description\":\"Test item\",\"image\":\"https://i.pravatar.cc\",\"category\":\"electronic\"}"
        },
        "url": "https://fakestoreapi.com/products"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 200\", ()=> pm.response.to.have.status(200));",
              "pm.test(\"Product created\", ()=> pm.expect(pm.response.json()).to.have.property('id'));"
            ]
          }
        }
      ]
    },
    {
      "name": "User Login",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"mor_2314\", \"password\": \"83r5^_\"}"
        },
        "url": "https://fakestoreapi.com/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Login returns token\", ()=> pm.expect(pm.response.json()).to.have.property('token'));"
            ]
          }
        }
      ]
    }
  ]
}
